{% if featured|length > 0 %}

<br>
<div class="featured-line">
    <div class="featured-title" style="width:180px;">
        <i class="fa fa-star-o"></i>&nbsp;&nbsp;&nbsp;Featured&nbsp;Startups
    </div>
</div>
<br>

    <ul class="cbp-rfgrid cbp-rfgrid2 clearfix">

        {% for startup in featured %}

            <li><a href="{{ startup.url }}" target="_blank"><img src="/static/logos/{{ startup.logo }}" /><div><h3>{{ startup.name }}</h3></div></a></li>

        {% endfor %}

    </ul>

{% endif %}

